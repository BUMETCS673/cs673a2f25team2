<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.shanzhu.health.mapper.RoleMenuMapper">
    <select id="getMenuIdListByRoleId" parameterType="Integer" resultType="Integer">
        SELECT a.`menu_id`
        FROM j_role_menu a, j_menu b
        WHERE a.`menu_id` = b.`menu_id`
        <!-- Indicates only query leaf node menu IDs, because non-leaf node menus should not be granted permissions. -->
        AND b.`is_leaf` = 'Y'
        <!-- Indicates query menu IDs with specific role ID to get the permission list for that role. -->
        AND a.`role_id` = #{roleId}
    </select>

</mapper>
